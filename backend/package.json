{
    "name": "mini-community",
    "version": "1.0.0",
    "description": "Project backend.",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "dev": "node --env-file=.env --import tsx --watch src/server.ts",
        "lint": "eslint 'src/**/*.{ts,tsx}'",
        "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
        "check": "tsc --watch --noEmit",
        "clean": "rm -rf node_modules .turbo node_modules/.cache dist .tsbuildinfo",
        "rebuild": "npm run clean && npm install && npx tsc --force",
        "build": "tsc",
        "start": "node dist/server.js"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "express": "^5.2.1",
        "express-rate-limit": "^8.1.0",
        "express-xss-sanitizer": "^2.0.1",
        "helmet": "^8.1.0",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.19.0",
        "morgan": "^1.10.1",
        "ms": "^2.1.3",
        "validator": "^13.15.22",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/express-xss-sanitizer": "^2.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.7.0",
        "@types/validator": "^13.15.3",
        "eslint": "^9.37.0",
        "prettier": "^3.6.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.45.0"
    },
    "private": true
}
